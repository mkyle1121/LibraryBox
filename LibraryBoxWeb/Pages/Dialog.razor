@inherits DialogBase

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="overflow-y: scroll">
            <MudText Style="white-space: pre-wrap;">
                <MudDivider/>
                <MudTable Elevation="4" Items="@markerClickListOfBooks" FixedHeader=true>
                    <HeaderContent>
                        <MudTh>Title</MudTh>
                        <MudTh>Author</MudTh>                     
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Title">@context.title</MudTd>
                        <MudTd DataLabel="Author">@context.author</MudTd>
                    </RowTemplate>                                      
                </MudTable>                               
            </MudText>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="CloseDialog">Close</MudButton>
    </DialogActions>
</MudDialog>
