@inherits DialogBase

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="max-height: 400px; overflow-y: scroll">
            <MudText Style="white-space: pre-wrap;">
                <MudDivider/>                
                <MudTable Bordered="true"  Hover="true" Elevation="4" Items="@MarkerClickListOfBooks" FixedHeader=true Dense="true">
                    <HeaderContent>
                        <MudTh>Cover</MudTh>
                        <MudTh>Title</MudTh>
                        <MudTh>Author</MudTh>  
                        <MudTh>Category</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Cover"><a href=""><img src="@context.SmallThumbnail" /></a></MudTd>
                        <MudTd DataLabel="Title">@context.Title</MudTd>
                        <MudTd DataLabel="Author">@context.Author</MudTd>
                        <MudTd DataLabel="Category">@context.Category</MudTd>
                    </RowTemplate>                                      
                </MudTable>                               
            </MudText>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="CloseDialog">Close</MudButton>
    </DialogActions>
</MudDialog>
