@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />
<MudSnackbarProvider />

<MudThemeProvider Theme="darkTheme" />

<MudLayout>
    <MudAppBar Dense="true">

        <MudLink Href="/">
            <MudButton Variant="Variant.Filled">LibraryBoxMap.com</MudButton>
        </MudLink>

        <MudSpacer />

        <MudLink Href="https://www.themikekyle.com/cool-stuff/librarybox">
            <MudButton Variant="Variant.Filled">Build Your Own LibraryBox</MudButton>
        </MudLink>

        <MudLink Href="https://docs.google.com/forms/d/e/1FAIpQLSedIb-lY5DxlgHThYJk6cA__BodBYdr49JK9oXMNfKbg-OqkA/viewform?usp=pp_url">
            <MudButton Variant="Variant.Filled">Feedback</MudButton>
        </MudLink>

    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


